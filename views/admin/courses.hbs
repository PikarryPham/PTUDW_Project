{{#> user-profile-layout}}
{{> title-user titleName='Admin Course'}}
<div class="row">
    {{#if courses.length}}

    <div class="container">
        <div class="row">
            {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
            {{/if}}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Course Name</th>
                        <th scope="col">Instructor Name</th>
                        <th scope="col">Looked</th>
                        <th scope="col">Drop Course</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{this.title}}</td>
                        <td>{{this.instructors.name}}</td>
                        <td> {{> model-course-admin data = this}}
                        </td>
                        <td><a href="/admin/course/{{this._id}}/delete"
                                role="button"
                                class="btn btn-primary">Drop
                                Course</a></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
    {{else}}
    <h2>No course your Course Store</h2>
    {{/if}}
</div>
{{/user-profile-layout}}