{{#> user-profile-layout}}
{{> title-user titleName='User'}}
<div class="row">
    {{#if users.length}}

    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">View</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td> {{> model-user-admin data = this}}
                        <td><a href="/admin/user/{{this._id}}/delete"
                                role="button"
                                class="btn btn-primary">Delete
                                User</a></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
    {{else}}
    <h2>No course your Course Store</h2>
    {{/if}}
</div>
{{/user-profile-layout}}